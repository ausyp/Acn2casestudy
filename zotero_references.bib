@article{tennant_determining_2017,
	title = {Determining the factors associated with blood-borne virus testing of substance misusers presenting to hospital},
	volume = {47},
	copyright = {© 2017 Royal Australasian College of Physicians},
	issn = {1445-5994},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/imj.13497},
