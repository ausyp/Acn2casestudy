	number = {9},
	urldate = {2019-10-15},
	journal = {Clinical Orthopaedics and Related Research®},
	author = {Lee, Kyung-Hag and Ha, Yong-Chan and Lee, Young-Kyun and Kang, Hyun and Koo, Kyung-Hoi},
