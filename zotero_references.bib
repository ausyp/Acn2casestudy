	urldate = {2019-10-15},
	journal = {The Journal of Arthroplasty},
	author = {Krenzel, Brian A. and Berend, Michael E. and Malinzak, Robert A. and Faris, Philip M. and Keating, E. Michael and Meding, John B. and Ritter, Merrill A.},
	month = sep,
	year = {2010},
	keywords = {dislocation, primary total hip arthroplasty, range of motion},
